{
  "rules": [
    {
      "id": "backend-dev",
      "match": {
        "fileExtensions": [".ts", ".js"],
        "pathContains": ["api", "services", "backend", "server"]
      },
      "applySkills": ["backend-dev-guidelines"]
    },
    {
      "id": "frontend-dev",
      "match": {
        "fileExtensions": [".tsx", ".jsx", ".js", ".vue", ".ts"],
        "pathContains": [
          "components",
          "ui",
          "frontend",
          "app",
          "pages",
          "utils"
        ]
      },
      "applySkills": ["frontend-dev-guidelines"]
    },
    {
      "id": "infra",
      "match": {
        "fileExtensions": [".yaml", ".yml", ".tf", ".sh"],
        "pathContains": ["infrastructure", "terraform", "k8s", "deploy"]
      },
      "applySkills": ["infra-guidelines"]
    }
  ]
}
